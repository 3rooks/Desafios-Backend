{
    "exclude": ["node_modules"],
    "compilerOptions": {
        "module": "Node16",
        "baseUrl": "./",
        "paths": {
            "#lib/*": ["./src/lib/*"],
            "#files/*": ["./src/files/*"],
            "#managers/*": ["./src/managers/*"],
            "#constants/*": ["./src/constants/*"],
            "#routes/*": ["./src/routes/*"],
            "#public/*": ["./src/public/*"],
            "#utils/*": ["./src/utils/*"],
            "#views/*": ["./src/views/*"],
            "#config/*": ["./src/config/*"]
        }
    }
}
